MDScreen:
    name: "kids"

    MDBoxLayout:
        orientation:"vertical"
        MDBoxLayout:
            md_bg_color: 0.9, 0.9 , 0.9
            orientation:"vertical"
            adaptive_height:True
            MDBoxLayout:
                size_hint_y:None
                height:dp(65)
                AnchorLayout:
                    anchor_y:'top'
                    anchor_x:'left'
                    MDIconButton:
                        icon:"arrow-left"
                        md_bg_color:app.theme_cls.primary_color
                AnchorLayout:
                    anchor_y:'top'
                    anchor_x:'right'
                    MDBoxLayout:
                        adaptive_size:True
                        MDIconButton:
                            icon:"magnify"
                            md_bg_color:app.theme_cls.primary_color
                        MDIconButton:
                            icon:"cart"
                            md_bg_color:app.theme_cls.primary_color
            MDBoxLayout:
                size_hint_y:None
                height:dp(55)
                spacing:dp(12)
                padding:dp(12)
                TabCard:
                    icon:'shoe-formal'
                    text:"Men"
                    on_release:
                        root.manager.current = "shoes"
                    md_bg_color:app.theme_cls.primary_color
                TabCard:
                    icon:'shoe-heel'
                    text:"Women"
                    on_release:
                        root.manager.current = "women"
                    md_bg_color:app.theme_cls.primary_color
                TabCard:
                    icon:'shoe-sneaker'
                    text:"Kids"
                    on_release:
                        root.manager.current = "kids"
                    md_bg_color:app.theme_cls.primary_color
        MDBoxLayout:
            ScrollView:
                MDGridLayout:
                    md_bg_color: 1,1,1
                    cols:2
                    padding:dp(20)
                    spacing:dp(20)
                    adaptive_height:True
                    ElementCard:
                        image:'images/k1.png'
                        price:'Ugx 23400'
                        rate:"  3.5/5"
                    ElementCard:
                        image:'images/k6.png'
                        price:'ugx 35700'
                        rate:"   5/5"
                    ElementCard:
                        image:'images/m6.png'
                        price:'Ugx 22500'
                        rate:"   4.5/5"
                    ElementCard:
                        image:'images/k4.png'
                        price:'Ugx 37000'
                        rate:"   3.0/5"
                    ElementCard:
                        image:'images/k5.png'
                        price:'Ugx 45000'
                        rate:"   4.0/5"
                    ElementCard:
                        image:'images/k6.png'
                        price:'Ugx 26500'
                        rate:"   3.0/5"
        # bottom navigation appbar
        MDBoxLayout:
            size_hint_y:None
            md_bg_color:app.theme_cls.primary_color
            height:dp(60)
            padding:[0,0,0,15]
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'home'
                    theme_text_color:'Custom'
                    text_color:  1,1, 1, 1
                MDLabel:
                    text:'Home'
                    valign:"center"
                    theme_text_color:'Custom'
                    text_color:  0,0,0,1
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'bell'
                    theme_text_color:'Custom'
                    text_color:   1,1, 1, 1

                MDLabel:
                    text:'Category'
                    theme_text_color:'Custom'
                    text_color: 0,0,0,1
                    valign:"center"
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'cards-heart'
                    theme_text_color:'Custom'
                    text_color:   1,1, 1, 1
                MDLabel:
                    text:'Favorite'
                    theme_text_color:'Custom'
                    text_color: 0,0,0,1
                    valign:"center"
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'account'
                    theme_text_color:'Custom'
                    text_color:   1,1, 1, 1
                MDLabel:
                    text:'Account'
                    theme_text_color:'Custom'
                    text_color: 0,0,0,1
                    valign:"center"
                    halign:"center"

<ContentCustomSheet@MDBoxLayout>:
    orientation: "vertical"
    size_hint_y: None
    height:dp(750)
    image:''
    rate:""
    price:""
    padding:dp(12)
    spacing:dp(6)
    RelativeLayout:
        ElementCard:
            pos_hint:{"x":.05,"y":.5}
            image:root.image
            rate:root.rate
            price:root.price

    MDBoxLayout:
        spacing:dp(5)
        Check:
            selected_color:1,0,0,1
            active:True
            unselected_color:1,0,0,1
            pos_hint: {'center_x': .5, 'center_y': .5}
        Check:
            selected_color:0,0,1,1
            unselected_color:0,0,1,1
            pos_hint: {'center_x': .5, 'center_y': .5}

        Check:
            selected_color:0,1,0,1
            unselected_color:0,1,0,1
            pos_hint: {'center_x': .5, 'center_y': .5}
        Check:
            selected_color:1,1,0,1
            unselected_color:1,1,0,1
            pos_hint: {'center_x': .5, 'center_y': .5}
    MDLabel:
        text:"this the latest version of our Brand with modern design."
        adaptive_height:True
    MDBoxLayout:
        adaptive_width:True

        MDIconButton:
            icon:"minus"
            pos_hint:{"center_x":.5,"center_y":.5}

        MDLabel:
            text:"1"
            halign:'center'
            valign:'center'
        MDIconButton:
            icon:'plus'
            pos_hint:{"center_x": .4,"center_y":.5}


    MDBoxLayout:
        spacing:dp(8)
        MDRoundFlatIconButton:
            icon:"cart"
            text:"Add to cart"
            size_hint_x:1
        MDRoundFlatIconButton:
            icon:"cards-heart"
            text:"Add to Favorite"
            size_hint_x:1
    MDRaisedButton:
        size_hint_x:1
        text:"Buy now"
<Check@MDCheckbox>:
    group: 'group'
    radio_icon_normal:"checkbox-blank-circle"
    size_hint: None, None
    size: dp(48), dp(48)

<ElementCard@MDCard>:
    image:''
    rate:''
    price:""
    orientation:'vertical'
    on_release:app.show_custom_bottom_sheet(root.image,root.price,root.rate)
    size_hint_x:.5
    elevation:15
    size_hint_y:None
    md_bg_color:216/255,216/255,216/255
    height:dp(220)
    padding:dp(25)
    spacing:dp(15)
    radius:[25,5]
    MDBoxLayout:
        height:dp(150)
        size_hint_y:None
        Image:
            source:root.image

    MDBoxLayout:
        size_hint_y:None
        height:dp(25)
        MDIcon:
            icon:'star'
            theme_text_color:'Custom'
            text_color:1,1,0,1
            halign:"center"
            size_hint_x:.25
            # width:dp(30)
        MDLabel:
            text:root.rate

    MDLabel:
        text:root.price
        font_style:'H6'


<TabCard@MDCard>:
    icon:""
    text:""
    size_hint_y:None
    radius:dp(15)
    height:dp(55)
    MDIconButton:
        icon:root.icon
    MDLabel:
        text:root.text
